<body>
  <h2>BROKEN LORD MD – File</h2>
  <div class="info" id="info"></div>
  <pre id="codeBox">Loading...</pre>

  <script>
    const params = new URLSearchParams(window.location.search);
    const view = params.get("view"); // "code" or null
    const pathParts = window.location.pathname.split("/");
    const id = pathParts[pathParts.length - 1] || pathParts[pathParts.length - 2];

    const info = document.getElementById("info");
    const codeBox = document.getElementById("codeBox");

    async function main() {
      if (!id) {
        info.textContent = "Missing ID.";
        codeBox.textContent = "";
        return;
      }

      try {
        const res = await fetch(`/api/resolve?id=${encodeURIComponent(id)}`);
        const data = await res.json();
        if (!res.ok) {
          info.textContent = "Link haijapatikana au ime-expire.";
          codeBox.textContent = data.error || "Not found.";
          return;
        }

        const target = data.url;
        if (view !== "code") {
          // MODE: redirect
          info.innerHTML = `Redirecting to hidden link (ID: ${id})...`;
          setTimeout(() => {
            window.location.href = target;
          }, 150);
          codeBox.textContent = "Please wait...";
          return;
        }

        // MODE: code viewer
        info.innerHTML =
          `Showing code for:<br><a href="${target}" target="_blank" rel="noopener noreferrer">${target}</a>`;

        try {
          const resp = await fetch(target);
          const text = await resp.text();
          codeBox.textContent = text;
        } catch (e) {
          codeBox.textContent = "Failed to load file content.\n\n" + e;
        }
      } catch (e) {
        info.textContent = "Server error.";
        codeBox.textContent = e.toString();
      }
    }

    main();
  </script>
</body>
</html>
